@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem-Vindo</h1>
</div>

<br>

<div class="container">
    <div class="row justify-content-center">
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@ViewBag.QuantidadeFornecedores</h3>

                    <p>Fornecedores</p>
                </div>
                <div class="icon">
                    <i class="fas fa-building"></i>
                </div>
                <a href="Fornecedor" class="small-box-footer">Mais informações<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@ViewBag.QuantidadeMercadorias</h3>

                    <p>Mercadoria</p>
                </div>
                <div class="icon">
                    <i class="fas fa-store"></i>
                </div>
                <a href="Mercadoria" class="small-box-footer">Mais informações<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@ViewBag.QuantidadeClientes</h3>

                    <p>Cliente</p>
                </div>
                <div class="icon">
                    <i class="fas fa-users"></i>
                </div>
                <a href="Cliente" class="small-box-footer">Mais informações<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
    </div>
</div>



<div class="container">
    <div class="row justify-content-center">
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-secondary">
                <div class="inner">
                    <h3>@ViewBag.QuantidadeCompras</h3>

                    <p>Compras</p>
                </div>
                <div class="icon">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <a href="Compra" class="small-box-footer">Mais informações<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-secondary" ">
                <div class="inner">
                    <h3>@ViewBag.QuantidadeVendas</h3>

                    <p>Vendas</p>
                </div>
                <div class="icon">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <a href="Venda" class="small-box-footer">Mais informações<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
    </div>
</div>


<div class="card">
    <div class="card-header border-transparent">
        <h3 class="card-title">Últimas Compras</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>Fornecedor</th>
                        <th>Mercadoria</th>
                        <th>Quantidade</th>
                        <th>Preço Unitário</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var compra in ViewBag.UltimasCompras)
            {
                        <tr>
                            <td>@compra.Fornecedor.nome</td>
                            <td>@compra.Mercadoria.nome</td>
                            <td>@compra.quantidade</td>
                            <td>@compra.precoCusto</td>
                        </tr>
            }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
</div>



<div class="card">
    <div class="card-header border-transparent">
        <h3 class="card-title">Últimas Vendas</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Mercadoria</th>
                        <th>Quantidade</th>
                        <th>Preço Unitário</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var venda in ViewBag.UltimasVendas)
            {
                        <tr>
                            <td>@venda.Cliente.nome</td>
                            <td>@venda.Mercadoria.nome</td>
                            <td>@venda.quantidade</td>
                            <td>@venda.precoVenda</td>
                        </tr>
            }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
</div>
