@model SoftwareContabilidade.Models.Mercadoria

@{
    ViewData["Title"] = "Mercadoria";
}


<h3>Deseja excluir esta Mercadoria?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.codigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.codigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.qtdEstoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.qtdEstoque)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.precoVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.precoVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.precoCusto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.precoCusto)
