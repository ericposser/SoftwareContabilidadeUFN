<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SoftwareContabilidade</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="plugins/overlayScrollbars/css/OverlayScrollbars.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">

</head>
<body class="hold-transition light-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                @* <li class="nav-item">
                <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                <i class="fas fa-th-large"></i>
                </a>
                </li> *@
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
           <a class="brand-link" style="text-decoration: none;">
    <span class="brand-text font-weight-light">Software Contabilidade</span>
</a>



            <!-- Sidebar -->
            <div class="sidebar">

                <!-- /.sidebar-menu -->

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                        <li class="nav-item">
                            <a class="nav-link text-grey" asp-area="" asp-controller="Home" asp-action="Index"><i class="nav-icon fas fa-home"></i>  Home </a>
                        </li>
                        </li>


                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-receipt"></i>
                                <p>
                                    Movimentação
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <li class="nav-item">
                                    <a class="nav-link text-grey" asp-area="" asp-controller="Compra" asp-action="Index"><i class="nav-icon fas fa-shopping-bag"></i>  Compra </a>
                                    </li>
                                </li>
                                <li class="nav-item">
                                    <li class="nav-item">
                                        <a class="nav-link text-grey" asp-area="" asp-controller="Venda" asp-action="Index"><i class="nav-icon fas fa-shopping-bag"></i>  Venda </a>
                                    </li>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-grey" asp-area="" asp-controller="Fornecedor" asp-action="Index"><i class="nav-icon fas fa-building"></i>  Fornecedor </a>
                        </li>

                        <li class="nav-item">
                        <a class="nav-link text-grey" asp-area="" asp-controller="Mercadoria" asp-action="Index"><i class="nav-icon fas fa-store"></i>  Mercadoria </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-grey" asp-area="" asp-controller="Cliente" asp-action="Index"><i class="nav-icon fas fa-users"></i>  Cliente </a>
                        </li>

                    <li class="nav-item">
                        <a class="nav-link text-grey" asp-area="" asp-controller="Patrimonio" asp-action="Index"><i class='fas fa-money-check-alt'></i>  ﾠPatrimônio </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-grey" asp-area="" asp-controller="Icms" asp-action="Index"><i class="nav-icon fas fa-align-left"></i>  Icms </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-grey" asp-area="" asp-controller="Relatorio" asp-action="Index"><i class="nav-icon fas fa-file-excel"></i>  Relatório </a>
                    </li>


                    </ul>
                </nav>
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->

            <br />

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">

                    <div class="card-body">
                        @RenderBody()
                        @RenderSection("Scripts", required: false)

                    </div>
                    <!-- /.card-body -->
                    <!-- /.card-footer-->
                </div>
                <!-- /.card -->

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
